<div class="row">
    <div class="col-md-12">
        <h2>购物明细</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>商品明细</th>
                    <th>单价</th>
                    <th>数量</th>
                </tr>
            </thead>
            <tbody>
                <% current_cart.cartitems.each do |cartitem| %>
                    <tr>
                        <td>
                            <%= link_to(cartitem.product.title, product_path(cartitem.product))%>
                        </td>
                        <td><%= cartitem.product.price%></td>
                        <td><%= cartitem.quantity%></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <div class="pull-right">
            总计<%= render_cart_total_price(current_cart)%>¥
    </div>
        <hr>
        <h2>订单资讯</h2>
        <div class="">
            <%= simple_form_for @order do |f| %>
                <legend>订购人</legend>
                <div class="form-group col-lg-6">
                    <%= f.input :billing_name%>
                </div>
                <div class="form-group col-lg-6">
                    <%= f.input :billing_address%>
                </div>
                <legend> 收货人</legend>
                <div class="form-group col-lg-6">
                    <%= f.input :shipping_name %>
                </div>
                <div class="form-group col-lg-6">
                    <%= f.input :shipping_address%>
                </div>
                <%= f.submit "生成订单", class: "btn btn-danger pull-right"%>
            <% end %>
        </div>
    </div>
</div>
