<h3> edit a product</h3>
<%= simple_form_for [:admin,@product] do |f|%>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price%>
    <%= f.input :quantity %>
    <% if @product.image.present?%>
        <span>目前商品图</span><br>
        <%= image_tag(@product.image.thumb.url)%>
    <% end %>
    <%= f.input :image, as: :file %>
    <%= f.submit 'Submit' %>
<% end %>
