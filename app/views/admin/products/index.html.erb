<h3>Product List</h3>
<%= link_to("Add new product", new_admin_product_path, class: "btn btn-default pull-right")%>
<table class="table table-boldered">
    <thead>
        <tr>
            <th>#</th>
            <th>图片</th>
            <th>品名</th>
            <th>价格</th>
            <th>选项</th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product|%>
            <tr>
                <td><%= product.id %></td>
                <td><%= link_to admin_product_path(product) do %>
                        <% if product.image.present?%>
                            <%= image_tag(product.image.thumb.url, class: "thumbnail")%>
                        <% else %>
                            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")%>
                        <% end %>
                    <% end %>
                </td>
                <td><%= product.title%></td>
                <td><%= product.price %></td>
                <td><%= link_to("Edit",edit_admin_product_path(product))%>
                    <%= link_to("delete",admin_product_path(product),method: :delete, :data =>{:confirm =>"Are you sure?"})%>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
